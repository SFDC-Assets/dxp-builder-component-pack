<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <masterLabel>SLDS Button Group</masterLabel>
    <description>SLDS Button Group of Links</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="buttonLabels" label="Button Labels" type="String" default="Button Group Item 1,Button Group Item 2,Button Group Item 3"/>  
            <property name="targetUrls" label="Target Urls" type="String" default="https://google.com,https://youtube.com,https://yahoo.com"/>      
            <property name="targetType" label="Target Type" type="String" datasource="Blank,Self,Parent,Top" default="Self"/>       
            <property name="variant" label="Variant" type="String" datasource="Neutral,Brand,Outline Brand,Destructive,Text Destructive,Success" default="Neutral"/>
            <property name="alignment" label="Alignment" type="String" datasource="Left, Center, Right" default="Center"/>    
            <property name="padding" label="Padding" type="String" datasource="None, X-Small, Small, Medium, Large, X-Large" default="X-Small"/>             
        </targetConfig>
    </targetConfigs>   
</LightningComponentBundle>